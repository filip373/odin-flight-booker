<h1>Book a flight</h1>
<%= form_for(@booking) do |f| %>
  <%= f.hidden_field(:flight_id) %>
  <h1>Flight</h1>
  <%= render(@booking.flight) %>
  <h1>Passengers</h1>
  <%= f.fields_for(:passengers) do |p| %>
    <div>
      <div class='passenger-form'>
        <%= p.label(:name) %>
        <%= p.text_field(:name) %>

        <%= p.label(:email) %>
        <%= p.text_field(:email) %>
      </div>
    </div>
  <% end %>
  <%= submit_tag('Book') %>
<% end %>
