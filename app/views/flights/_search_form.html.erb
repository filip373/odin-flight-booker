<%= form_for(:search, url: root_path, method: :get) do |f| %>
  <%= f.label(:from, 'From:') %>
  <%= f.select(:from, options_for_select(@airports)) %>

  <%= f.label(:to, 'To:') %>
  <%= f.select(:to, options_for_select(@airports)) %>

  <%= f.label(:date, 'Date:') %>
  <%= f.select(:date, options_for_select(@dates)) %>

  <%= f.label(:pass_number, 'Number of passengers:') %>
  <%= f.select(:pass_number, options_for_select(@passengers)) %>

  <%= f.submit('Search') %>
<% end %>
