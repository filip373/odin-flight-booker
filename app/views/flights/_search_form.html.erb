<%= form_tag(root_path, method: :get) do %>
  <%= label_tag(:from, 'From:') %>
  <%= select_tag(:from, options_for_select(@airports)) %>

  <%= label_tag(:to, 'To:') %>
  <%= select_tag(:to, options_for_select(@airports)) %>

  <%= label_tag(:date, 'Date:') %>
  <%= select_tag(:date, options_for_select(@dates)) %>

  <%= label_tag(:pass_number, 'Number of passengers:') %>
  <%= select_tag(:pass_number, options_for_select(@passengers)) %>

  <%= submit_tag('Search') %>
<% end %>
